extends template/main

block variables
  - var title = 'Продукт'
  - var pageClass = 'card-page'
block content
  .container 
    include modules/crumbs/crumbs
    h1.mb-5 Фритюрница
    .row.product-card--container
      .col-5
        .card-photo(style={'background-image': 'url(static/images/content/rec.png)'})
      .col-7
        .product-body
          .product-item__desc
            dl
              dt.product-item__title.text-big Фритюрница ERGO EF-061
                dd.product-item__text Производитель: <span class='bold'>Китай</span>
                dd.product-item__text Мощность: <span class='bold'>2 кВт</span>
                dd.product-item__text Количество ванн: <span class='bold'>1</span>
                dd.product-item__text Артикул: <span class='bold'>RF-12-551</span>
          .product-item__price-block
            .product-item__price.recommended-item-price.mb-2 6 697 <span class="recommended-item-cur">₽/шт</span>
            .product-item__amount.d-flex.align-items-end
              input(type='button', value='-', onclick="change('amount',0,10,-1);").amount-change
              input#amount(type='text', value='1')
              input(type='button', value='+', onclick="change('amount',0,10, 1);").amount-change
        .product-footer
          .product-item__price.recommended-item-price.mb-2.text-red <span class="text-big">Итого</span> 6 697 <span class="recommended-item-cur">₽/шт</span>    
          .btn.recommended-item__btn
            +icon('cart', 'mr-2')
            | В корзину

  section.section-recommended
